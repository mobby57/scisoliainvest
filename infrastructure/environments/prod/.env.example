# Production Environment Configuration

NODE_ENV=production
PORT=3000
API_PORT=4000

# Database (Use environment-specific secrets)
DATABASE_URL=postgresql://[USER]:[PASSWORD]@[HOST]:5432/solia_prod
POSTGRES_HOST=[RDS_ENDPOINT]
POSTGRES_PORT=5432
POSTGRES_DB=solia_prod

# Redis
REDIS_URL=redis://[ELASTICACHE_ENDPOINT]:6379

# JWT (Use AWS Secrets Manager)
JWT_SECRET=[MANAGED_BY_SECRETS_MANAGER]
JWT_EXPIRES_IN=7d

# API URLs
API_URL=https://api.solia-invest.com
CLIENT_URL=https://solia-invest.com

# Logging
LOG_LEVEL=warn
LOG_FORMAT=json

# Feature Flags
ENABLE_DEBUG=false
ENABLE_PROFILING=false
ENABLE_METRICS=true

# AWS Services
AWS_REGION=eu-west-1

# Email (Use SES)
EMAIL_HOST=email-smtp.eu-west-1.amazonaws.com
EMAIL_PORT=587
EMAIL_FROM=noreply@solia-invest.com

# Monitoring
SENTRY_DSN=[SENTRY_DSN]
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=https://solia-invest.com,https://www.solia-invest.com

# Security
HELMET_ENABLED=true
CSRF_ENABLED=true

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 */6 * * *"
BACKUP_RETENTION_DAYS=30

# High Availability
REPLICA_COUNT=3
AUTO_SCALING_ENABLED=true
MIN_REPLICAS=2
MAX_REPLICAS=10
