# üîß Configuration Staging - SCI Solia Invest
# Configuration interm√©diaire pour tests utilisateurs avant production

# Application
NODE_ENV=staging
PORT=3000

# CORS - Remplacer par votre domaine staging
CORS_ORIGIN=https://staging.soliainvest.com
FRONTEND_URL=https://staging.soliainvest.com

# JWT Secrets (utiliser des secrets distincts de production)
# IMPORTANT: G√©n√©rer de vrais secrets avant d√©ploiement!
# Commande pour g√©n√©rer: openssl rand -base64 64
JWT_SECRET=staging_secret_replace_with_real_64_chars_minimum_key
JWT_REFRESH_SECRET=staging_refresh_secret_replace_with_real_64_chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Base de donn√©es - Staging DB (s√©par√©e de production)
# Option 1: PostgreSQL
DATABASE_URL=postgresql://user:password@staging-db-host:5432/sci_solia_invest_staging

# Option 2: MongoDB
# DATABASE_URL=mongodb://user:password@staging-mongo-host:27017/solia-staging

# Redis - Instance staging s√©par√©e
REDIS_URL=redis://staging-redis-host:6379

# Azure (secrets staging - distincts de production)
AZURE_CLIENT_ID=REPLACE_WITH_STAGING_CLIENT_ID
AZURE_TENANT_ID=REPLACE_WITH_STAGING_TENANT_ID
AZURE_CLIENT_SECRET=REPLACE_WITH_STAGING_CLIENT_SECRET

# Email - Peut utiliser un service de test comme Mailtrap
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USER=REPLACE_WITH_MAILTRAP_USER
EMAIL_PASS=REPLACE_WITH_MAILTRAP_PASS
# Ou utiliser un vrai service pour staging
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587

# Stockage - Bucket staging s√©par√©
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/uploads/staging/
# Ou S3 staging bucket
# UPLOAD_PATH=s3://votre-bucket-staging/uploads/

# Multi-tenant
TENANT_MODE=multi
TENANT_DEFAULT=default

# Monitoring et logs
LOG_LEVEL=debug
ENABLE_AUDIT_LOGS=true

# AWS Configuration (staging)
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=REPLACE_WITH_STAGING_KEY
AWS_SECRET_ACCESS_KEY=REPLACE_WITH_STAGING_SECRET

# Feature flags pour staging
ENABLE_DEBUG_MODE=true
ENABLE_PERFORMANCE_MONITORING=true
