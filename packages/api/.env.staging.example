# üîÑ Configuration de staging (pr√©-production) - EXEMPLE
# Copiez ce fichier vers .env.staging et configurez les valeurs

# Application
NODE_ENV=staging
PORT=3000

# CORS (domaine de staging)
CORS_ORIGIN=https://staging.soliainvest.com
FRONTEND_URL=https://staging.soliainvest.com

# JWT Secrets (utiliser des secrets diff√©rents de la production)
# G√âN√âRER DE NOUVEAUX SECRETS UNIQUES !
JWT_SECRET=CHANGE_THIS_staging_jwt_secret_64_chars_minimum_staging_2024
JWT_REFRESH_SECRET=CHANGE_THIS_staging_refresh_secret_64_chars_minimum_staging_2024
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Base de donn√©es (instance d√©di√©e au staging)
# Utiliser une base de donn√©es s√©par√©e de la production et du d√©veloppement
DATABASE_URL=postgresql://staging_user:staging_password@staging-db-host:5432/sci_solia_invest_staging

# Redis (instance d√©di√©e au staging ou cache local)
REDIS_URL=redis://staging-redis-host:6379
# DISABLE_REDIS=false

# Azure (peut utiliser les m√™mes credentials de dev ou des credentials d√©di√©s)
AZURE_CLIENT_ID=STAGING_CLIENT_ID_CHANGE_THIS
AZURE_TENANT_ID=STAGING_TENANT_ID_CHANGE_THIS
AZURE_CLIENT_SECRET=STAGING_CLIENT_SECRET_CHANGE_THIS

# Email (utiliser un service de test comme Mailtrap ou MailHog)
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_USER=STAGING_EMAIL_USER
EMAIL_PASS=STAGING_EMAIL_PASS
EMAIL_FROM=noreply@staging.soliainvest.com

# Stockage
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads/staging/

# Multi-tenant
TENANT_MODE=multi
TENANT_DEFAULT=default

# Monitoring et Logs
LOG_LEVEL=debug
ENABLE_AUDIT_LOGS=true
ENABLE_PERFORMANCE_MONITORING=true

# AWS Configuration (si n√©cessaire)
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=STAGING_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=STAGING_AWS_SECRET_KEY

# IoT Core Configuration (si n√©cessaire)
IOT_CORE_ENDPOINT=staging-iot-endpoint.iot.eu-west-1.amazonaws.com

# Timestream Configuration (si n√©cessaire)
TIMESTREAM_DATABASE=sci-solia-iot-staging
TIMESTREAM_TABLE=sensor-data-staging

# Feature Flags pour le staging
ENABLE_NEW_FEATURES=true
ENABLE_BETA_TESTING=true
ENABLE_DEBUG_MODE=true
