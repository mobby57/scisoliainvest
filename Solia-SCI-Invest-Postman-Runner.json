            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "login"
              ]
            }
          }
        },
        {
          "name": "3. SCI - Create SCI Entity",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Create SCI and capture ID",
                  "pm.test(\"SCI created successfully\", function() {",
                  "  pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
                  "  const response = pm.response.json();",
                  "  pm.expect(response).to.have.property('_id');",
                  "  pm.environment.set('sciId', response._id);",
                  "  console.log('SCI ID set:', pm.environment.get('sciId'));",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
