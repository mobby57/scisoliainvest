    {
      "name": "ðŸš€ Complete SCI Workflow",
      "item": [
        {
          "name": "1. Auth - Register User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Register a new user",
                  "pm.test(\"User registered successfully\", function() {",
                  "  pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
                  "  const response = pm.response.json();",
                  "  pm.expect(response).to.have.property('message');",
                  "  pm.expect(response.message).to.include('success');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"investor@test.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "auth",
                "register"
              ]
            }
          }
        },
        {
          "name": "2. Auth - Login & Get Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// Login and capture auth token",
                  "pm.test(\"Login successful\", function() {",
                  "  pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
                  "  const response = pm.response.json();",
                  "  pm.expect(response).to.have.property('token');",
                  "  pm.environment.set('authToken', response.token);",
                  "  console.log('Auth token set:', pm.environment.get('authToken'));",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
