              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"SCI Solia Invest\",\n  \"slug\": \"sci-invest\",\n  \"address\": \"10 avenue de l'Invest\"\n}"
