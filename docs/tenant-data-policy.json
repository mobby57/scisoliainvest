{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "dynamodb:GetItem",
        "dynamodb:PutItem",
        "dynamodb:Query"
      ],
      "Resource": "arn:aws:dynamodb:*:*:table/SCI-*",
      "Condition": {
        "ForAllValues:StringEquals": {
          "dynamodb:Attributes": ["tenantId", "propertyId", "investorId"]
        }
      }
    }
  ]
}