{
  "info": {
    "name": "SCI Routes Validation",
    "description": "Collection pour valider les routes SCI de l'API Solia Invest",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{auth_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3001",
      "type": "string"
    },
    {
      "key": "auth_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "sci_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Login Admin",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Login successful', function () {",
                  "    pm.response.to.have.status(200);",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.success).to.be.true;",
                  "    pm.expect(response.token).to.exist;",
                  "    pm.collectionVariables.set('auth_token', response.token);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@solia.com\",\n  \"password\": \"password\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/login",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Health Check",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Health check successful', function () {",
                  "    pm.response.to.have.status(200);",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.status).to.eql('OK');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/health",
              "host": ["{{base_url}}"],
              "path": ["api", "health"]
            }
          }
        }
      ]
    },
    {
      "name": "SCI Management",
      "item": [
        {
          "name": "Create SCI",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('SCI created successfully', function () {",
                  "    pm.response.to.have.status(201);",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.success).to.be.true;",
                  "    pm.expect(response.data).to.exist;",
                  "    pm.expect(response.data.name).to.eql('SCI Test Immobilier');",
                  "    pm.collectionVariables.set('sci_id', response.data.id);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"SCI Test Immobilier\",\n  \"siren\": \"123456789\",\n  \"capitalCents\": 100000\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/sci",
              "host": ["{{base_url}}"],
              "path": ["api", "sci"]
            }
          }
        },
        {
          "name": "Get All SCIs",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('SCIs retrieved successfully', function () {",
                  "    pm.response.to.have.status(200);",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.success).to.be.true;",
                  "    pm.expect(response.data).to.be.an('array');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/sci",
              "host": ["{{base_url}}"],
              "path": ["api", "sci"]
            }
          }
        },
        {
          "name": "Get SCI by ID",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('SCI retrieved by ID successfully', function () {",
                  "    pm.response.to.have.status(200);",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.success).to.be.true;",
                  "    pm.expect(response.data).to.exist;",
                  "    pm.expect(response.data.id).to.eql(pm.collectionVariables.get('sci_id'));",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/sci/{{sci_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "sci", "{{sci_id}}"]
            }
          }
        },
        {
          "name": "Update SCI",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('SCI updated successfully', function () {",
                  "    pm.response.to.have.status(200);",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.success).to.be.true;",
                  "    pm.expect(response.data.name).to.eql('SCI Test Immobilier Updated');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"SCI Test Immobilier Updated\",\n  \"capitalCents\": 150000\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/sci/{{sci_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "sci", "{{sci_id}}"]
            }
          }
        },
        {
          "name": "Delete SCI",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('SCI deleted successfully', function () {",
                  "    pm.response.to.have.status(200);",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.success).to.be.true;",
                  "    pm.expect(response.message).to.eql('SCI deleted successfully');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/sci/{{sci_id}}",
              "host": ["{{base_url}}"],
              "path": ["api", "sci", "{{sci_id}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Error Handling",
      "item": [
        {
          "name": "Create SCI - Missing Name",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Validation error for missing name', function () {",
                  "    pm.response.to.have.status(400);",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.success).to.be.false;",
                  "    pm.expect(response.message).to.include('Name is required');",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"siren\": \"123456789\",\n  \"capitalCents\": 100000\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/sci",
              "host": ["{{base_url}}"],
              "path": ["api", "sci"]
            }
          }
        },
        {
          "name": "Get SCI - Invalid ID",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Not found error for invalid ID', function () {",
                  "    pm.response.to.have.status(404);",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.success).to.be.false;",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/sci/999999",
              "host": ["{{base_url}}"],
              "path": ["api", "sci", "999999"]
            }
          }
        },
        {
          "name": "Unauthorized Access",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Unauthorized access without token', function () {",
                  "    pm.response.to.have.status(401);",
                  "});"
                ]
              }
            }
          ],
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/sci",
              "host": ["{{base_url}}"],
              "path": ["api", "sci"]
            }
          }
        }
      ]
    }
  ]
}