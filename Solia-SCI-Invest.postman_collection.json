{
  "info": {
    "name": "Solia SCI Invest API",
    "_postman_id": "d9f1a2b0-4c3e-4d1f-a1b2-ef567890abcd",
    "description": "Collection API pour SCI Solia Invest - gestion SCI, investisseurs, propriétés, transactions, KYC",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Register",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{ \"email\": \"investor@test.com\", \"password\": \"password123\" }" },
        "url": { "raw": "{{baseUrl}}/auth/register", "host": ["{{baseUrl}}"], "path": ["auth", "register"] }
      }
    },
    {
      "name": "Auth - Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{ \"email\": \"investor@test.com\", \"password\": \"password123\" }" },
        "url": { "raw": "{{baseUrl}}/auth/login", "host": ["{{baseUrl}}"], "path": ["auth", "login"] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const res = pm.response.json();",
              "if(res.token){ pm.environment.set('authToken', res.token); }"
            ]
          }
        }
      ]
    },
    {
      "name": "SCI - Create",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{authToken}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{ \"name\": \"SCI Solia Invest\", \"slug\": \"sci-invest\", \"address\": \"10 avenue de l'Invest\" }"
        },
        "url": { "raw": "{{baseUrl}}/sci", "host": ["{{baseUrl}}"], "path": ["sci"] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const res = pm.response.json();",
              "if(res._id){ pm.environment.set('sciId', res._id); }"
            ]
          }
        }
      ]
    },
    {
      "name": "Investor - Add",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{authToken}}" }
        ],
        "body": { "mode": "raw", "raw": "{ \"userId\": \"{{investorId}}\", \"sharePercentage\": 40 }" },
        "url": { "raw": "{{baseUrl}}/sci/{{sciId}}/associates", "host": ["{{baseUrl}}"], "path": ["sci", "{{sciId}}", "associates"] }
      }
    },
    {
      "name": "Property - Add",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{authToken}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{ \"name\": \"Appartement Paris\", \"value\": 350000, \"address\": \"25 rue Lafayette\" }"
        },
        "url": { "raw": "{{baseUrl}}/sci/{{sciId}}/properties", "host": ["{{baseUrl}}"], "path": ["sci", "{{sciId}}", "properties"] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const res = pm.response.json();",
              "if(res._id){ pm.environment.set('propertyId', res._id); }"
            ]
          }
        }
      ]
    },
    {
      "name": "Transaction - Add",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{authToken}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{ \"type\": \"contribution\", \"amount\": 50000, \"date\": \"2025-08-24\", \"description\": \"Apport initial\" }"
        },
        "url": { "raw": "{{baseUrl}}/sci/{{sciId}}/transactions", "host": ["{{baseUrl}}"], "path": ["sci", "{{sciId}}", "transactions"] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const res = pm.response.json();",
              "if(res._id){ pm.environment.set('transactionId', res._id); }"
            ]
          }
        }
      ]
    },
    {
      "name": "KYC - Create Profile",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{authToken}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{ \"userId\": \"{{investorId}}\", \"type\": \"individual\", \"status\": \"pending\" }"
        },
        "url": { "raw": "{{baseUrl}}/kyc/profiles", "host": ["{{baseUrl}}"], "path": ["kyc","profiles"] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const res = pm.response.json();",
              "if(res._id){ pm.environment.set('kycProfileId', res._id); }"
            ]
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:4000/api" },
    { "key": "authToken", "value": "" },
    { "key": "sciId", "value": "" },
    { "key": "investorId", "value": "" },
    { "key": "propertyId", "value": "" },
    { "key": "transactionId", "value": "" },
    { "key": "kycProfileId", "value": "" }
  ]
}
