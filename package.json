{
  "name": "sci-solia-invest",
  "version": "1.0.0",
  "description": "SCI Solia Invest Platform",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"pnpm --filter api dev\" \"pnpm --filter client dev\"",
    "build": "pnpm --filter client build && pnpm --filter api build",
    "test": "pnpm --filter client test && pnpm --filter api test",
    "test:unit": "pnpm --filter api test && pnpm --filter client test:unit",
    "test:e2e": "pnpm --filter client test:e2e && newman run SCI_Solia_Invest_Tests.postman_collection.json",
    "test:database": "pnpm --filter api test -- tests/database.test.ts",
    "test:setup": "bash scripts/setup-test-db.sh",
    "test:setup:windows": "scripts\\setup-test-db.bat",
    "test:fix": "packages\\api\\fix-tests.bat",
    "test:all": "bash scripts/run-all-tests.sh",
    "test:all:windows": "powershell -ExecutionPolicy Bypass -File scripts/run-tests.ps1",
    "test:coverage": "pnpm --filter api test:coverage && pnpm --filter client test:coverage",
    "test:report": "node scripts/generate-test-report.js",
    "lint": "pnpm --filter client lint && pnpm --filter api lint",
    "validate": "pnpm --filter client validate && pnpm --filter api validate"
  },
  "keywords": [
    "investment",
    "platform",
    "sci",
    "solia"
  ],
  "author": "SCI Solia",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.3.1",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^8.2.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@faker-js/faker": "^10.0.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "mongoose": "^8.18.0",
    "node-fetch": "^2.7.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "type": "commonjs"
}
