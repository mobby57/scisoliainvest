          "mode": "raw",
          "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"TestPass123!\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "login"]
        }
      }
    },
    {
      "name": "Create Project",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 201', function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test('Project created successfully', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('id');",
              "    pm.expect(jsonData.name).to.eql('Test SCI Project');",
              "    pm.environment.set('projectId', jsonData.id);",
              "});",
              "",
              "pm.test('Project has required fields', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('targetAmount');",
              "    pm.expect(jsonData).to.have.property('expectedReturn');",
              "    pm.expect(jsonData).to.have.property('status');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{authToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Test SCI Project\",\n  \"description\": \"Test investment project for E2E testing\",\n  \"targetAmount\": 500000,\n  \"minimumInvestment\": 10000,\n  \"duration\": 24,\n  \"expectedReturn\": 8.5,\n  \"riskLevel\": \"medium\",\n  \"location\": \"Paris, France\",\n  \"status\": \"active\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/projects",
          "host": ["{{baseUrl}}"],
          "path": ["api", "projects"]
        }
      }
    },
