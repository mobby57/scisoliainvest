# Variables d'environnement pour Docker Compose Staging
# Ces variables sont utilisées par docker-compose.staging.yml

# MongoDB Configuration
MONGO_STAGING_USER=staging_admin
MONGO_STAGING_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_FOR_STAGING
MONGO_STAGING_DB=solia-staging

# JWT Secrets for Backend
STAGING_JWT_SECRET=REPLACE_WITH_YOUR_SECURE_JWT_SECRET_MIN_64_CHARS
STAGING_JWT_REFRESH_SECRET=REPLACE_WITH_YOUR_SECURE_REFRESH_SECRET_MIN_64_CHARS

# Note: Générez de vrais secrets avec: openssl rand -base64 64
